# Database (PostgreSQL connection string)
DATABASE_URL="postgresql://user:password@localhost:5432/awning_calculator"

# NextAuth.js v5
# AUTH_SECRET is required - generate with: openssl rand -base64 32
AUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# For production, set the trust host (Vercel sets this automatically)
AUTH_TRUST_HOST=true

# Google OAuth (get from Google Cloud Console)
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Google Maps API (for address autocomplete and distance calculation)
# Client-side key for address autocomplete (needs Places API enabled)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
# Server-side key for distance calculation (needs Distance Matrix API enabled)
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
